package partials

templ URLResult(url string, errMsg string) {
	{{ hasError := errMsg != "" }}
	<div id="url-result">
		if hasError {
			<div id="url-result--error" role="alert" aria-live="polite">{ errMsg }</div>
		}
		<div
			id="url-result--url"
			class={ templ.KV("with-error", hasError) }
			if hasError {
				aria-describedby="url-result--error"
			}
		>
			if url != "" {
				<a href={ templ.SafeURL(url) }>{ url }</a>
			}
		</div>
	</div>
}
