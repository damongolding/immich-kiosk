templ DownloadingStatus(isDownloading bool) {
	<div
		if isDownloading {
			hx-post="/asset/downloading"
			hx-trigger="every 1s"
		}
		id="download"
		class={ templ.KV("downloading", isDownloading) }
		hx-swap-oob="true"
	>
		@DownloadingIcon(isDownloading)
	</div>
}
